@using SpicyX.Areas.Admin.ViewModels.Position
@model UpdatePositionVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Position</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="Index" asp-controller="Position" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>