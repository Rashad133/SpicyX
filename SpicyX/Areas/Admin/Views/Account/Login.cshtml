@using SpicyX.Areas.Admin.ViewModels.Account
@model LoginVM


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Login</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="UsernameOrEmail">Username or Email</label>
                    <input asp-for="UsernameOrEmail" type="text" class="form-control" placeholder="Username">
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>